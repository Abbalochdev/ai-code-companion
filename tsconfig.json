

{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "out",
        "lib": ["ES2020", "DOM"],
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "types": ["node", "vscode"],
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types/*"],
            "@jest/globals": ["src/types/jest.d.ts"]
        }
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules",
        "out",
        "**/*.spec.ts"
    ]
}